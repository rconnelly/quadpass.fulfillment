extends layout

block content
    .page-header
        h1 #{page.title}&nbsp;
            small Order gifts from your favorite places

    form.form-horizontal(action='/orderpage', method='post', accept-charset='utf-8')
        input(type='hidden', name='_csrf', value=req.session._csrf)

        section
            h2 1. Recipient
            .well
                .control-group
                    label.control-label(for='recipient[name]') Full Name
                    .controls
                        input.input-xlarge(id='recipient[name]'
                            , name='recipient[name]'
                            , type='text'
                            , required)
                        - var emailRegex = '[a-z0-9!#$%&\'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&\'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?'

                .control-group
                    label.control-label(for='recipient[email]') Email
                    .controls
                        input.input-xlarge(id='recipient[email]'
                            , name='recipient[email]'
                            , type='email'
                            , pattern=emailRegex
                            , required)

        section
            h2 2. Gift Details
            .well
                .control-group
                    label.control-label(for='gift[amount]') Gift Amount
                    .controls
                        .input-prepend.input-append
                            span.add-on $
                            input.input-mini.giftamount(style='text-align: right',id='gift[amount]',name='gift[amount]',type='text',disabled,required,pattern="[0-9]+")
                            span.add-on .00

                .control-group
                    .controls
                        div.btn-group.cardvalue(data-toggle='buttons-radio')
                            a.btn.cardvalue-25 $25
                            a.btn.cardvalue-35 $35
                            a.btn.cardvalue-50 $50
                            a.btn.cardvalue-75 $75
                            a.btn.cardvalue-100 $100
                            a.btn.cardvalue-200 $200
                            a.btn.cardvalue-500 $500
                            a.btn.cardvalue-other Other

        section
            h2 3. Personalize
            .well
                .control-group
                    label.control-label(for='gift[amount]') Theme
                    .controls
                        ul.thumbnails.theme
                            - var thumbs = ['Modern','Classic','Spring','Birthday'];
                            each thumb in thumbs
                                li
                                    .thumbnail(href='#')
                                        img(src='http://placehold.it/160x120', alt='')
                                        .caption
                                            label.radio(for='gift[theme]-'+thumb)
                                                strong #{thumb}
                                                input(type='radio',name='gift[theme]',id='gift[theme]-'+thumb)

                .control-group
                    label.control-label(for='gift[amount]') Personal Message
                    .controls
                        textarea.input-xlarge(id='gift[message]',name='gift[message]',rows='5')
                .control-group
                    label.control-label(for='gift[amount]') Upload a Video
                    .controls
                        input(type='file')
        section
            h2 4. Payment
            .well
                .control-group
                    label.control-label(for='payment[type]') Pay by
                    .controls
                        select.paymenttype(id='payment[type]',name='payment[type]')
                            option(value='card') Credit Card
                            option(value='check') Check

                .control-group.card
                    label.control-label(for='payment[name]') Name
                    .controls
                        input.input-large(type='text',id='payment[ccnum]',name='payment[ccnum]'
                            , required)

                .control-group.card
                    label.control-label(for='payment[ccnum]') Account
                    .controls
                        .input-prepend
                            span.add-on number
                            input.input-large(type='text',id='payment[ccnum]',name='payment[ccnum]'
                                , required)

                            span.add-on exp
                            input.input-mini(type='text',id='payment[exp]',name='payment[exp]'
                                , placeholder='mm/yyyy'
                                , pattern='^((0[1-9])|(1[0-2]))\/((2012)|(20[1-2][0-9]))$'
                                , required)

                            span.add-on cvv
                            input.input-mini(type='text',id='payment[exp]',name='payment[cvv]'
                                , placeholder=''
                                , pattern='[0-9]{3,4}'
                                , required)

                .control-group.check
                    label.control-label(for='payment[routingnum]') Check
                    .controls
                        .input-prepend
                            span.add-on routing #
                            input.input-medium(type='text',id='payment[routingnum]',name='payment[routingnum]')

                            span.add-on account #
                            input.input-medium(type='text',id='payment[accountnum]',name='payment[accountnum]')

                            span.add-on check #
                            input.input-small(type='text',id='payment[checknum]',name='payment[checknum]')

        .form-actions.well
            input.btn.btn-large.btn-primary(type='submit',value='Send')


    script(type='text/javascript')
        $('.theme li img').click(function(){
            $(this).siblings('.caption').find('input[type="radio"]').attr('checked',true);
        });

        $('.check').hide();

        $('.paymenttype').change(function(){
            $('.check').toggle();
            $('.card').toggle();
        });

        $('.cardvalue a').click(function(){
            var value = $.trim($(this).text()).replace('$','');
            if(value == 'Other')
            {
                $('.giftamount').val('');
                $('.giftamount').removeAttr('disabled');
                $('.giftamount').focus();
            }
            else
            {
                $('.giftamount').attr('disabled', 'disabled');
                $('.giftamount').val(value);
            }
        });

